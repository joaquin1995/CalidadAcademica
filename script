
create table roles(
id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
nombre text not null,
estado char(1),
"createdAt" date,
"updatedAt" date
);



CREATE table personas(
id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
nombres text not null,
apat text not null,
amat text not null,
email text not null,
idrol int REFERENCES roles(id),
limitacion int not null,
estado char(1),
"createdAt" date,
"updatedAt" date
);


create table cuentas(
id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
usuario text not null,
password text not null,
estado char(1),
idper int REFERENCES personas(id),
"createdAt" date,
"updatedAt" date
);

 
 CREATE TABLE facultades(
 id int PRIMARY key,
 descripcion text not null,
 "createdAt" date,
"updatedAt" date
 );
 
 
 create table carreras(
  id int PRIMARY key,
 carrera text not null,
 idfac int REFERENCES facultades(id),
 "createdAt" date,
"updatedAt" date
 );
  
 create table materias(
 id int PRIMARY key,
	siglas TEXT,
nombre text not null,
 "createdAt" date,
"updatedAt" date
 );
 
 create table carr_mats(
	id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
	idmat int REFERENCES materias(id),
	pensum int not null,
	idcarr int REFERENCES carreras(id),
  "createdAt" date,
  "updatedAt" date
 );
 
 
  create table tipo_actividades(
 id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
nombre text not null,
estado char(1),
 "createdAt" date,
"updatedAt" date
 );
 
 
 create table actividades(
  id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
	modulo int not null,
	semestre text not null,
	fecha date not null,
	descripcion text not null,
	idtipoac int REFERENCES tipo_actividades ,
	idmat int REFERENCES materias ,
	idcarrera int REFERENCES carreras,
	idper int REFERENCES personas,
	estado char(1),
 "createdAt" date,
"updatedAt" date
 );
 
 
 
 CREATE table archivos(
 id int GENERATED by DEFAULT as IDENTITY PRIMARY key,
nombre text not null,
estado char(1),
idact int REFERENCES actividades,
 "createdAt" date,
"updatedAt" date
 );
 
 
 SELECT * from facultades
 
 SELECT * from carreras
 
 SELECT * from materias
 
 SELECT * from carr_mat

 
 
 
 
